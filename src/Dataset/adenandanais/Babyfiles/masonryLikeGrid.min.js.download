function resizeGridItem(item){var rowHeight=item.getElementsByClassName('category-item').length;let subcategories=item.querySelectorAll('.level-1 .categories-lay a').length;if(subcategories){rowHeight+=Math.floor(subcategories / 2);}
var rowSpan=rowHeight+2;item.style.gridRowEnd='span '+rowSpan;}
function resizeAllGridItems(){if(window.screen.width>760){var xSiteMap=document.getElementsByClassName('xsitemap');if(xSiteMap.length){xSiteMap[0].style.display='grid';var allItems=document.getElementsByClassName('category-lay');for(var x=0;x<allItems.length;x++){resizeGridItem(allItems[x]);}
window.removeEventListener('resize',resizeAllGridItems);}}}
window.onload=resizeAllGridItems();window.addEventListener('resize',resizeAllGridItems);